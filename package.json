{
  "name": "cz-adapter-eslint",
  "version": "0.0.0",
  "description": "A commitizen adapter for the conventional-changelog eslint preset.",
  "homepage": "https://github.com/stormwarning/cz-adapter-eslint",
  "author": "Jeff Nelson (http://tidaltheory.co/)",
  "config": {
    "commitizen": {
      "path": "./index.js"
    }
  },
  "devDependencies": {
    "babel-eslint": "~7.2.3",
    "commitizen": "~2.9.6",
    "emoji-cz": "^0.3.0",
    "eslint": "~4.6.1",
    "eslint-config-standard": "~10.2.1",
    "eslint-plugin-import": "~2.7.0",
    "eslint-plugin-node": "~5.1.1",
    "eslint-plugin-promise": "~3.5.0",
    "eslint-plugin-standard": "~3.0.1",
    "husky": "^0.14.3",
    "lint-staged": "~4.3.0",
    "npm-run-all": "~4.1.2",
    "prettier-eslint": "~7.1.0",
    "remark-cli": "~4.0.0",
    "remark-contributors": "~3.1.0",
    "remark-github": "~7.0.2",
    "remark-preset-lint-markdown-style-guide": "~2.1.1",
    "remark-toc": "~4.0.1"
  },
  "keywords": [
    "commitizen",
    "commitizen-adapter",
    "conventional-changelog",
    "eslint",
    "changelog"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.md": [
      "remark . -qo",
      "git add"
    ]
  },
  "publishConfig": {
    "message": "ðŸ”– %s"
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-markdown-style-guide",
      [
        "lint-maximum-line-length",
        false
      ],
      [
        "lint-list-item-spacing",
        false
      ],
      "contributors",
      "github",
      "toc"
    ],
    "settings": {
      "commonmark": true,
      "bullet": "-",
      "listItemIndent": 1,
      "rule": "-",
      "ruleSpaces": false,
      "strong": "*",
      "emphasis": "*"
    }
  },
  "repository": "stormwarning/cz-adapter-eslint",
  "scripts": {
    "cz": "git-cz",
    "lint": "npm-run-all lint:*",
    "lint:markdown": "remark . -qo",
    "_precommit": "lint-staged && npm test",
    "test": "npm run lint"
  }
}
